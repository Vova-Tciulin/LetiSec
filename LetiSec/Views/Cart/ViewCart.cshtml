@model IEnumerable<Product>

@if(Model.Count()==0)
{
    <h2>Корзина пуста</h2>
}
<div>
    <h1>Корзина</h1>
        <ul>
        @foreach(var product in Model)
        {
            <li>
                @product.Name @product.Price
                @{
                    ViewBag.ReturnUrl += "/" + product.Id;
                }
                <a asp-action="RemoveProduct" asp-controller="Cart" asp-route-path="@ViewBag.ReturnUrl">Удалить</a>
            </li>
        }
    </ul>
    
    <a asp-action="BuyProduct" asp-controller="Cart">Купить</a>
</div>