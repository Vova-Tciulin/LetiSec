@model List<Order>

@if(Model.Count()==0)
{
    <h2>Корзина пуста</h2>
}
<div>
    <h1>Корзина</h1>
        <ul>
        @foreach(var order in Model)
        {
            <li>
                @order.Product.Name @order.Product.Price<br>
                Count: @order.Count
                @{
                    ViewBag.ReturnUrl += "/" + order.Product.Id;
                }
                <a asp-action="RemoveProduct" asp-controller="Cart" asp-route-path="@ViewBag.ReturnUrl">Удалить</a>
            </li>
        }
    </ul>
    
    <a asp-action="BuyProduct" asp-controller="Cart">Купить</a>
</div>