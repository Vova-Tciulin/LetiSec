@model IEnumerable<Product>


<div class="container p-3" style="background-color:white; margin:50px auto; padding:5px 25px">
    <div class="row pt-4">
        <div class="col-6">
            <h2 >Товары</h2>
        </div>
        <div class="col-6 text-right" style="margin:20px 0px">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Создать новый товар
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название продукта
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Категория
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="10%">@obj.Price</td>
                        <td width="20%">@obj.Category.Name</td>

                        <td width="20%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2" style="margin:0px 2px">
                                    <i class="fas fa-edit"></i>
                                </a>
                            <a asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2" style="margin:0px 2px">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product exists.</p>
    }

</div>

 
