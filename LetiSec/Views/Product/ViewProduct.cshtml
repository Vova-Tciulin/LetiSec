@model IEnumerable<Product>

<h1>Товары</h1>
<a asp-action="Upsert" asp-controller="Product">Создать</a>
@if (Model.Count() == 0)
{
    <p>Товаров нет</p>
}
else
{
    @foreach (var product in Model)
    {
        <table>
            <tr >
                <td>@product.Name-</td>
                <td>@product.Category.Name-</td>
                <td><a asp-action="Upsert" asp-controller="Product" asp-route-id="@product.Id">Редактировать-</a></td>
                <td><a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id">Удалить</a></td>
            </tr>

        </table>
    }
}