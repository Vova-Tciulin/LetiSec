@model UserDetailsVM


<form method="post">
    
    <label asp-for="User.Id">@Model.User.Id</label>
    <input asp-for="User.Id" hidden/>

    <label asp-for="User.Name">@Model.User.Name</label> 
    
    <label asp-for="User.Email">@Model.User.Email</label>

    <label asp-for="User.Role"></label>
    <select asp-for="User.RoleId" asp-items="@Model.Roles" class="form-control">
            <option disabled selected>--Select Category--</option>
    </select>

    <h2>Заказы</h2>
    @if (Model.User.Orders.Count == 0)
    {
        <h3>Покупок нет</h3>
    }
    <ul>
        @foreach (var order in Model.User.Orders)
        {
            <li>
                Товар: @order.Product.Name<br>
                Количество: @order.Count<br>
            </li>

        }
    </ul>
    <button type="submit">изменить</button>
    <a asp-action="ViewUsers">Назад</a>

</form>