@model IEnumerable<Category>

<h1>Категории</h1>
<a asp-action="Create" asp-controller="Category">Создать</a>
@if(Model.Count()==0)
{
    <p>Категорий нет</p>
}
else
{
    @foreach(var category in Model)
    {
        <table>
            <tr>
                <td>@category.Name</td>
                <td><a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Удалить</a></td>
            </tr>
        </table>
    }
}