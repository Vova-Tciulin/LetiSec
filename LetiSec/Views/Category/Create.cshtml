@model Category


<section class="registration">
    <div class="registration-cssave">
       
        <form method="post">
            <h1 style="text-align:center; margin-bottom:50px">Создание категории</h1>
            <div class="form-group">
                <label asp-for="Name" class="col-md-4 control-label">Название категории</label>
                <div class="col-md-6">
                    <input asp-for="Name" class="form-control item" type="text">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>


            <div class="form-group">
                <button class="btn btn-primary  create-account" type="submit">Создать</button>
            </div>
            
        </form>

    </div>

</section>






