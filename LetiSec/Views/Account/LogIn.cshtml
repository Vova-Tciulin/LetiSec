@model LoginModel



<section class="registration">
    <div class="registration-cssave">
        <form asp-action="LogIn" method="post">
            <h3 class="text-center">Вход</h3>
            <div class="form-group">
                <input  asp-for="Email" class="form-control item" type="text"  id="username" placeholder="Логин" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control item" type="password"id="password" placeholder="Пароль" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
   
            <div class="form-group">
                <button class="btn btn-primary btn-block create-account" type="submit">Вход в аккаунт</button>
            </div>
            <div class="form-group">
                <p class="text-center">Нет аккаунта?<a asp-action="Registration">Регистрация</a></p>

            </div>
        </form>
        
    </div>
    
</section>